    "contact": {}
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Autenticação (Firebase)"
    },
    {
      "name": "Recipes",
      "description": "Receitas"
    },
    {
      "name": "Ratings",
      "description": "Avaliações e comentários"
    },
