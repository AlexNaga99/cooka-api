            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "photoUrl": {
            "type": "object",
            "nullable": true
          },
          "followersCount": {
            "type": "number"
          },
          "followingCount": {
            "type": "number"
          },
          "popularityScore": {
            "type": "number"
          },
          "createdAt": {
            "type": "string"
          },
          "isAdsFree": {
